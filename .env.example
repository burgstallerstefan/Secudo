# Database (Docker: postgres:5432, Local: localhost:5432)
DATABASE_URL="postgresql://secudo:secudo-dev-password@postgres:5432/secudo_dev"

# Docker Database Configuration
DB_USER="secudo"
DB_PASSWORD="secudo-dev-password"
DB_NAME="secudo_dev"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# API
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Application
NODE_ENV="development"
NEXT_PUBLIC_ENVIRONMENT="development"

# Ollama (AI, optional)
# If you start Docker with `--profile ai`, use http://ollama:11434.
# Without AI profile you can keep this value and AI routes will fall back automatically.
OLLAMA_BASE_URL="http://ollama:11434"
OLLAMA_MODEL="qwen2.5:3b"
OLLAMA_TIMEOUT_MS="90000"
OLLAMA_TEMPERATURE="0.2"
OLLAMA_NUM_PREDICT="1600"
OLLAMA_RETRY_COUNT="1"
OLLAMA_AUTO_PULL="true"
OLLAMA_STATUS_CACHE_TTL_MS="15000"

# Optional: Email (future)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Optional: External Services
# UPLOAD_BUCKET=
# AWS_REGION=

# Logging
LOG_LEVEL="debug"
